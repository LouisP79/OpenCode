<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/text_margin_start_end_onboarding"
        android:layout_marginEnd="@dimen/text_margin_start_end_onboarding"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintDimensionRatio="1.269"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/title_margin_start_end_onboarding"
        android:layout_marginTop="@dimen/title_text_margin_top_onboarding"
        android:layout_marginEnd="@dimen/title_margin_start_end_onboarding"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/title_text_size_onboarding"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Mantén el control al alcance de un click" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_start_end_onboarding"
        android:layout_marginTop="@dimen/title_text_margin_top_onboarding"
        android:layout_marginEnd="@dimen/text_margin_start_end_onboarding"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_text_size_onboarding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Con nuestro detallado resumen podrás ver el status de tus inquilinos, historial de sus pagos e información de sus tarjetas." />
</androidx.constraintlayout.widget.ConstraintLayout>
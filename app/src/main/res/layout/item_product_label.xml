<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="@dimen/home_fragment_recyclerView_logo_width"
        android:layout_height="@dimen/home_fragment_recyclerView_logo_height"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="@dimen/home_fragment_recyclerView_logo_margin_top"
        android:layout_marginBottom="@dimen/item_product_text_margin_start_end"
        android:src="@drawable/img_logo_lineal"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>